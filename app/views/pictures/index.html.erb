<h1 class ="title">Photogur (<%= @pictures.length %>) </h1>
<%= link_to("Back to Pictures", "/pictures") %> |
<%= link_to("New Picture", "/pictures/new") %>
<br>
<% @pictures.each do |picture| %>
  <a href = "/pictures/<%= picture.id %>"<p><%= picture.title %>, <%= picture.artist %></p>
  <img src="<%= picture.url %>" alt="<%= picture.title %>"</a>
<% end %>

<h1>Most recent pictures</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
    <li><%= picture.title %></li>
  <% end %>
</ul>
